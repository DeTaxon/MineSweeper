
SweeperNuklear := class extend SimpleWindow
{
	DrawCode := virtual !(void^ nk) -> void
	{
		intVal := char[256]
		sprintf(intVal[0]&,"fps %i",15)
		rect := nk_rect//(10,10,100,100)
		rect.x = 0
		rect.y = 0
		rect.w = 250
		rect.h = 250
		if nk_begin(nk,"HI",rect,NK_WINDOW_MOVABLE + NK_WINDOW_BORDER + NK_WINDOW_CLOSABLE) != 0
		{
			nk_layout_row_dynamic(nk,30,1)
			nk_label(nk,intVal[0]&,0x11)
		}
		nk_end(nk)
	}
}

main := !(char^[] args) -> void
{
	w := new SweeperNuklear()
	w.Run()
}
